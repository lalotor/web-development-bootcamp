<%- include("partials/header") -%>

<h1>Compose</h1>

<form class="" action="/compose" method="post">
  <div class="form-group">
    <label for="postTitle">Title</label>
    <input type="text" class="form-control" name="postTitle" id="postTitle">
    <label for="postBody">Post</label>
    <textarea class="form-control" rows="5" name="postBody" id="postBody"></textarea>
  </div>
  <button class="btn btn-primary" type="submit" name="submitButton">Publish</button>
</form>

